    .item {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      padding: 20px;
      margin-bottom: 25px;
    }
    .item h2 {
      margin-top: 0;
    }
    .rating-buttons button {
      font-size: 1.3em;
      margin: 5px 6px;
      padding: 10px 16px;
      border: none;
      border-radius: 10px;
      background-color: #66cc66;
      color: white;
      cursor: pointer;
      transition: background-color 0.2s;
    }
    .rating-buttons button:hover {
      background-color: #4da64d;
    }
    .rating-buttons button.disabled {
      background-color: #ccc !important;
      cursor: not-allowed;
    }
    .results {
      margin-top: 15px;
      font-size: 1.1em;
    }
