<body>
  <h1>RankStuff: Rate These Items</h1>

  <div class="item" data-id="grass">
    <h2>üåø Grass</h2>
    <p>How would you rank grass from 1 to 10?</p>
    <div class="rating-buttons"></div>
    <div class="results">
      <p>Average Rating: <span class="avg">-</span></p>
      <p>Total Votes: <span class="votes">0</span></p>
    </div>
  </div>

  <div class="item" data-id="pizza">
    <h2>üçï Pizza</h2>
    <p>How would you rank pizza from 1 to 10?</p>
    <div class="rating-buttons"></div>
    <div class="results">
      <p>Average Rating: <span class="avg">-</span></p>
      <p>Total Votes: <span class="votes">0</span></p>
    </div>
  </div>

  <div class="item" data-id="video-games">
    <h2>üéÆ Video Games</h2>
    <p>How would you rank video games from 1 to 10?</p>
    <div class="rating-buttons"></div>
    <div class="results">
      <p>Average Rating: <span class="avg">-</span></p>
      <p>Total Votes: <span class="votes">0</span></p>
    </div>
  </div>

  <script>
    // For each item, setup the buttons, votes, and averages.
    document.querySelectorAll('.item').forEach(item => {
      const id = item.getAttribute('data-id');
      const ratingButtonsDiv = item.querySelector('.rating-buttons');
      const avgSpan = item.querySelector('.avg');
      const votesSpan = item.querySelector('.votes');

      let totalVotes = 0;
      let totalScore = 0;

      // Check localStorage if user voted on this item
      let hasVoted = localStorage.getItem('rankstuff_' + id + '_voted') === 'true';

      // Create buttons 1-10
      for (let i = 1; i <= 10; i++) {
        const btn = document.createElement('button');
        btn.textContent = i;
        btn.onclick = () => {
          if (hasVoted) return;
          totalVotes++;
          totalScore += i;
          avgSpan.textContent = (totalScore / totalVotes).toFixed(2);
          votesSpan.textContent = totalVotes;
          hasVoted = true;
          localStorage.setItem('rankstuff_' + id + '_voted', 'true');
          disableButtons();
        };
        ratingButtonsDiv.appendChild(btn);
      }

      function disableButtons() {
        ratingButtonsDiv.querySelectorAll('button').forEach(btn => {
          btn.classList.add('disabled');
          btn.disabled = true;
        });
      }

      if (hasVoted) {
        disableButtons();
      }
    });
  </script>
</body>
</html>
